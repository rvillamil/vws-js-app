{
    "name": "vws-js-app",
    "productName": "Video Website Scraper",
    "version": "1.8.0",
    "description": "Electron application for web-scraping on torrent video websites",
    "main": "./app/main.js",
    "scripts": {
        "start": "npm install && npm link ../vws-js-lib && electron .",
        "pack": "build --dir",
        "package-mac": "build --platform=darwin",
        "package-win": "build --platform=win32",
        "package-linux": "build --platform=linux",
        "package-all": "npm install && npm run package-mac && npm run package-win && npm run package-linux"
    },
    "build": {
        "appId": "org.develar.onshape",
        "files": [
            "app"
        ],
        "mac": {
            "category": "public.app-category.graphics-design"
        },
        "nsis": {
            "createDesktopShortcut": "always"
        },
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "category": "Graphics"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rvillamil/vws-js-app.git"
    },
    "keywords": [
        "scrapping",
        "torrent",
        "portal",
        "video",
        "Electron"
    ],
    "author": "Rodrigo Villamil PÃ©rez",
    "license": "MIT",
    "homepage": "https://github.com/rvillamil/vws-js-app",
    "devDependencies": {
        "electron": "3.0.7",
        "electron-builder": "^20.31.2"
    },
    "dependencies": {
        "vws-js-lib": "git+https://github.com/rvillamil/vws-js-lib.git"
    }
}
